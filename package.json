{
  "name": "image-compare-app",
  "productName": "imageCompare",
  "version": "1.0.0",
  "description": "app to compare similar/duplicate images before deleting",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . image-compare-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"imageCompare\"",
    "package-linux": "electron-packager . image-compare-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "author": "muhallilahnaf",
  "license": "MIT",
  "dependencies": {
    "trash": "^7.1.1"
  },
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "electron-winstaller": "^5.0.0"
  }
}